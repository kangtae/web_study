<% 
  let gnb = locals.require('gnb.json')
  var page = 'build'
  let sub = '등록'
  let heading = (sub && (gnb[page].children[sub].hasOwnProperty('view') === false || gnb[page].children[sub].view !== false )) ? ((gnb[page].children[sub].hasOwnProperty('title') === false || gnb[page].children[sub].title == "" ) ? sub : gnb[page].children[sub].title) : ((gnb[page].children[sub].hasOwnProperty('title') === false || gnb[page].children[sub].title == "" ) ? gnb[page].title.ko : gnb[page].children[sub].title)
-%>
<% locals.setLayout('_base.ejs') -%>
<% locals.block('page',page) %>
<% locals.block('sub',sub) %>
<% locals.block('heading',heading) %>
<% locals.block('title', heading + ' | ','append') -%>

<div class="row">
  <div class="col-sm-12">
    
    <table class="table table-bordered">
      <colgroup>
        <col style="width:100px;">
        <col>
        <col style="width:100px;">
        <col>
      </colgroup>
      <tbody>
        <tr>
          <th class="active">구분</th>
          <td>
            <label class="radio-inline">
              <span class="form-radio"><input type="radio" name="inlineRadioOptions" id="" value="option1" checked><i></i></span> 토목
            </label>
            <label class="radio-inline">
              <span class="form-radio"><input type="radio" name="inlineRadioOptions" id="" value="option2"><i></i></span> 건축
            </label>
            <label class="radio-inline">
              <span class="form-radio"><input type="radio" name="inlineRadioOptions" id="" value="option2"><i></i></span> 플랜트
            </label>
          </td>
          <th class="active">등록일</th>
          <td>2018-11-21</td>
        </tr>
        <tr>
          <th class="active">공사명</th>
          <td colspan="3">
            <input type="text" name="" id="" class="form-control input-sm" value="">
          </td>
        </tr>
        <tr>
          <th class="active">발주처</th>
          <td colspan="3">
            <input type="text" name="" id="" class="form-control input-sm" value="">
          </td>
        </tr>
        <tr>
          <th class="active">공사개요</th>
          <td colspan="3">
            <input type="text" name="" id="" class="form-control input-sm" value="">
          </td>
        </tr>
        <tr>
          <th class="active">착공일</th>
          <td>
            <input type="text" name="" id="" class="form-control input-sm" value="">
          </td>
          <th class="active">준공일</th>
          <td>
            <input type="text" name="" id="" class="form-control input-sm" value="">
          </td>
        </tr>
        <tr>
          <th class="active">이미지</th>
          <td colspan="3">
            <div class="row">
              <div class="col-xs-2">
                <input type="file" id="input-file-now" class="dropify" data-height="200" data-default-file="" data-allowed-file-extensions="jpg png gif" />
              </div>
            </div>
            <div class="xs-mt-5">
              권장비율 00:00<br>
              권장사이즈 000x000
            </div>
          </td>
        </tr>
        <tr>
          <th class="active">상세내용</th>
          <td colspan="3">
            <textarea class="form-control" rows="3" placeholder="500자 이하"></textarea>
          </td>
        </tr>
      </tbody>
    </table>
    <!-- //table -->
    
  </div>
</div>

<div class="row">
  <div class="col-sm-4 text-left">
  </div>
  <div class="col-sm-4 text-center">
    <a class="btn btn-default" href="<%- gnb[page].children['목록'].link %>.html" role="button"><i class="fa fa-times" aria-hidden="true"></i> 취소</a>
    <a class="btn btn-success" href="<%- gnb[page].children['상세'].link %>.html" role="button"><i class="fa fa-check" aria-hidden="true"></i> 등록</a>
  </div>
  <div class="col-sm-4 text-right">
  </div>
</div>