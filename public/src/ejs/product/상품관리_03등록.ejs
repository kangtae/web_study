<% 
  let gnb = locals.require('gnb.json')
  var page = 'product'
  let sub = '등록'
  let heading = (sub && (gnb[page].children[sub].hasOwnProperty('view') === false || gnb[page].children[sub].view !== false )) ? ((gnb[page].children[sub].hasOwnProperty('title') === false || gnb[page].children[sub].title == "" ) ? sub : gnb[page].children[sub].title) : ((gnb[page].children[sub].hasOwnProperty('title') === false || gnb[page].children[sub].title == "" ) ? gnb[page].title.ko : gnb[page].children[sub].title)
-%>
<% locals.setLayout('_base.ejs') -%>
<% locals.block('page',page) %>
<% locals.block('sub',sub) %>
<% locals.block('heading',heading) %>
<% locals.block('title', heading + ' | ','append') -%>


<div class="row">
  <div class="col-sm-12">
    <h4 class="lead">표시설정</h4>
    <table class="table table-bordered">
      <colgroup>
        <col style="width:100px;">
        <col>
        <col style="width:100px;">
        <col>
      </colgroup>
      <tbody>
        <tr>
          <th class="active">진열상태</th>
          <td colspan="3">
            <label class="radio-inline">
              <span class="form-radio"><input type="radio" name="productProgress" id="productProgress_y" value="option1"><i></i></span> 진열함
            </label>
            <label class="radio-inline">
              <span class="form-radio"><input type="radio" name="productProgress" id="productProgress_n" value="option2" checked><i></i></span> 진열안함
            </label>
          </td>
        </tr>
        <tr>
          <th class="active">판매상태</th>
          <td colspan="3">
            <label class="radio-inline">
              <span class="form-radio"><input type="radio" name="sellState"" id="sellState_y"
                  value="option1"><i></i></span> 판매함
            </label>
            <label class="radio-inline">
              <span class="form-radio"><input type="radio" name="sellState" id="sellState_n" value="option2"
                  checked><i></i></span> 판매안함
            </label>
          </td>
        </tr>
        <tr>
          <th class="active">상품분류 선택</th>
          <td colspan="3">
            <div class="form-inline">
              <div class="input-group">
                <select class="form-control">
                  <option value="">대분류</option>
                  <option value="">여성</option>
                  <option value="">남성</option>
                </select>
              </div>
              <div class="input-group">
                <select class="form-control">
                  <option value="">중분류</option>
                  <option value="">여성복</option>
                  <option value="">실크액세서리</option>
                </select>
              </div>
              <div class="input-group">
                <select class="form-control">
                  <option value="">소분류</option>
                  <option value="">여성</option>
                  <option value="">남성</option>
                </select>
              </div>
            </div>        
          </td>
        </tr>
        <tr>
          <th class="active">메인진열</th>
          <td colspan="3">
            <table class="table table-bordered">
                <colgroup>
                    <col style="width:100px;">
                    <col>
                    <col style="width:100px;">
                    <col>
                </colgroup>
                <tbody>
                    <tr>
                        <th class="active">추천상품</th>
                        <td>
                            <label class="checkbox-inline">
                                <input type="checkbox"> 진열함
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <th class="active">신상품</th>
                        <td>
                            <label class="checkbox-inline">
                                <input type="checkbox"> 진열함
                            </label>
                        </td>
                    </tr>
                </tbody>
            </table>
          </td>
        </tr>
        <tr>
          <th class="active">제목</th>
          <td colspan="3">
            <input type="text" name="" id="" class="form-control input-sm">
          </td>
        </tr>
        <tr>
          <th class="active">등록일</th>
          <td>2018-11-21</td>
          <th class="active">조회수</th>
          <td></td>
        </tr>
        <tr>
          <th class="active">첨부파일</th>
          <td colspan="3">
            
            <div class="hidden">
              <div class="col-xs-2 input-file-box model">
                <input type="file" data-height="100" data-default-file="" />
                <button class="btn btn-xs btn-danger btn-remove"><i class="fa fa-times" aria-hidden="true"></i><span class="sr-only">삭제</span></button>
                <button class="btn btn-xs btn-primary btn-duplicator"><i class="fa fa-plus" aria-hidden="true"></i><span class="sr-only">추가</span></button>
              </div>
            </div>
            
            <div class="row">
              <div class="col-xs-2 input-file-box">
                <input type="file" class="dropify" data-height="100" data-default-file="" />
                <button class="btn btn-xs btn-primary btn-duplicator"><i class="fa fa-plus" aria-hidden="true"></i><span class="sr-only">추가</span></button>
              </div>
            </div>
            
          </td>
        </tr>
        <tr>
          <td colspan="4">
            <div>
              
              <div style="padding:200px;background-color:skyblue;text-align:center;">에디터</div>
              
            </div>
          </td>
        </tr>
      </tbody>
    </table>
    <!-- //table -->
    
  </div>
</div>

<div class="row">
  <div class="col-sm-4 text-left">
  </div>
  <div class="col-sm-4 text-center">
    <a class="btn btn-default" href="<%- gnb[page].children['목록'].link %>.html" role="button"><i class="fa fa-times" aria-hidden="true"></i> 취소</a>
    <a class="btn btn-success" href="<%- gnb[page].children['상세'].link %>.html" role="button"><i class="fa fa-check" aria-hidden="true"></i> 등록</a>
  </div>
  <div class="col-sm-4 text-right">
  </div>
</div>